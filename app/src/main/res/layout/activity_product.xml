<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="aquar.aswany.myaquar_eg.Activity.Product_Activity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/go360"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/threesixsty"
            android:text="" />



        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/Product_Slider"
            android:layout_width="match_parent"
            android:layout_height="230dp">
        </com.daimajia.slider.library.SliderLayout>

        <ImageView
            android:src="@drawable/triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-13dp"
            android:layout_marginLeft="30dp"
            android:layout_above="@+id/Relative"
             />

        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#ba2521"
            android:layout_below="@+id/Product_Slider"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/EGP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:text="EGP"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="97dp"
                android:text="560,0000"
                android:textColor="@color/white"
                android:textSize="22sp" />


            <RelativeLayout
                android:layout_marginRight="5dp"
                android:id="@+id/re_phone"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="@null">


                <Button
                    android:id="@+id/Product_Frag_Share"
                    android:background="@drawable/share_white_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="7dp"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/re_phone"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="@null">

                <Button
                    android:id="@+id/Product_Frag_Call"
                    android:background="@drawable/icon_phone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/loc"
                android:layout_marginRight="5dp"
                android:backgroundTint="@android:color/white"
                android:layout_toLeftOf="@+id/phone"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="@null">

                <Button
                    android:id="@+id/location"
                    android:background="@drawable/location"
                    android:backgroundTint="@android:color/white"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/loc"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="@null">

                <Button
                    android:id="@+id/struct1"
                    android:backgroundTint="@android:color/white"
                    android:background="@drawable/struct_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/Product_Project"
                android:layout_below="@+id/EGP"
                android:textSize="22sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Life park , El shoruk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/Relative"
            />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:gravity="center">

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"


                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=" Title "
                        android:textColor="#a2171b"
                        android:textSize="20dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"

                        android:background="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Value"
                        android:textColor="#a2171b"
                        android:textSize="20dp"

                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        />


                </TableRow>

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_margin="1dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text=" Property Type"

                        android:textAppearance="?android:attr/textAppearanceLarge"

                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/Product_Frag_Type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="department"
                        android:textSize="18dp"

                        android:textAppearance="?android:attr/textAppearanceLarge" />


                </TableRow>

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="Property Size"

                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="80m"
                        android:textSize="18dp"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:id="@+id/Product_Frag_Size"


                        />


                </TableRow>

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="BedRooms"
                        android:textSize="18dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/Product_Frag_BedRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="3"
                        android:textSize="18dp"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        />
                </TableRow>>
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="BathRooms"
                        android:textSize="18dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=" 1"
                        android:textSize="18dp"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:id="@+id/Product_Frag_BathRoom"
                        />
                </TableRow>>
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="Accommodation"
                        android:textSize="18dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="-"
                        android:textSize="18dp"
                        android:id="@+id/Product_Frag_Accommodation"
                        android:layout_margin="1dp"
                        android:layout_column="1"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        />
                </TableRow>>
            </TableLayout>

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView

                    android:layout_width="2dp"
                    android:background="#a2171b"
                    android:layout_height="180dp" />


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/des"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#a2171b"
            android:layout_below="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="@string/Product_Des"
            />
        <TextView
            android:id="@+id/Product_Frag_Details"
            android:layout_below="@+id/des"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="3dp"
            android:layout_marginRight="10dp"
            android:text="80mdiahsiohdjsadfbSUVFIUDSVUFVADSBFDBSJFBJDSBFJBSDAJBFJD"
            android:textSize="17sp"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <Button
        android:id="@+id/more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:background="@drawable/mor_info_btn"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        />

</LinearLayout>


</ScrollView>

