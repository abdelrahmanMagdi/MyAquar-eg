<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context="aquar.aswany.myaquar_eg.Activity.Home_Activity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logox" />
            <Button
                android:id="@+id/seobtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:background="@drawable/confirmbutton"
                android:layout_centerVertical="true"
                android:text="SEO"
                android:textColor="#fff"
                android:textSize="19sp"/>
            <EditText
                android:id="@+id/search_text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                />
            <Button
                android:id="@+id/searchBtn"
                android:onClick="searchBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search_black_24dp" />

        </RelativeLayout>


    <FrameLayout
        android:id="@+id/Home_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Home_BottomNavi"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:visibility="visible"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigation" />


</LinearLayout>
